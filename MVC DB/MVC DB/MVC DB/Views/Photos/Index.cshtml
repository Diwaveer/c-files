@model IEnumerable<MVC_DB.Models.Photo>

@{
    ViewData["Title"] = "Photos";
}

<h2>Photos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Upload New Photo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                <td>
                    <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-info">Download</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
